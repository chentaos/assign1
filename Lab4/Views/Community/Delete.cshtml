@model Lab4.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Community</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Community.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Community.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Community.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Community.Budget)
        </dd>
    </dl>

    @if (Model.Advertisements.Count() == 0)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Community.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> <br />
            <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <h4>You cannot delete a community untill all associated advertisements are deleted</h4>
        <a asp-action="Index">Back to List</a>
    }

</div>

